                    </VBox.margin>
                </HBox>
                <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="24.0" VBox.vgrow="ALWAYS">
                    <children>
                        <Label fx:id="lblPassword" text="Password" textFill="#1d4d4f" HBox.hgrow="ALWAYS" />
                        <PasswordField fx:id="pwdPassword" HBox.hgrow="ALWAYS" />
                    </children>
                    <padding>
                        <Insets left="20.0" right="20.0" />
                    </padding>
                </HBox>
                <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
                    <children>
                        <Button fx:id="btnSignIn" mnemonicParsing="false" onAction="#submitSignIn" style="-fx-background-color: #1D4D4F;" text="Sign In" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
