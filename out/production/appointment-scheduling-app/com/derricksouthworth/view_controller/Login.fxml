<AnchorPane prefHeight="270.0" prefWidth="300.0" stylesheets="@../utilities/app.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.derricksouthworth.view_controller.LoginController">
    <children>
        <Label fx:id="lblLogInTitle" alignment="CENTER" layoutX="38.0" layoutY="6.0" styleClass="header" text="Welcome" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <font>
                <Font name="System Bold" size="36.0" />
            </font>
            <padding>
                <Insets bottom="10.0" top="10.0" />
            </padding>
        </Label>
        <VBox layoutY="73.0" prefHeight="273.0" prefWidth="300.0" styleClass="default-pane" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="74.0">
            <children>
                <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="15.0" VBox.vgrow="ALWAYS">
                    <children>
                        <Label fx:id="lblUserName" style="-fx-background-color: #E5DFDF;" text="User Name" textFill="#1d4d4f" HBox.hgrow="ALWAYS" />
