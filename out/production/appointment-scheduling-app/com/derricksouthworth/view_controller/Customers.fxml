<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>


<Pane stylesheets="@../utilities/app.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.derricksouthworth.view_controller.CustomersController">
   <children>
      <VBox fx:id="vboxCustomerMain" layoutX="5.0" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="400.0" minWidth="600.0" stylesheets="@../utilities/app.css">
         <children>
            <ButtonBar prefHeight="40.0" prefWidth="200.0" styleClass="nav">
              <buttons>
                <Button fx:id="btnAddCustomer" mnemonicParsing="false" onAction="#addCustomer" text="New" />
                  <Button fx:id="btnUpdateCustomer" layoutX="505.0" layoutY="18.0" mnemonicParsing="false" onAction="#updateCustomer" text="Edit" />
                  <Button fx:id="btnRemoveCustomer" layoutX="505.0" layoutY="18.0" mnemonicParsing="false" onAction="#removeCustomer" text="Delete" />
              </buttons>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <padding>
                  <Insets left="15.0" right="15.0" />
               </padding>
            </ButtonBar>
            <TableView fx:id="tblCustomers" prefHeight="200.0" prefWidth="200.0" styleClass="default-pane" VBox.vgrow="ALWAYS">
              <columns>
                <TableColumn fx:id="colCustomerName" prefWidth="75.0" text="Name" />
                <TableColumn fx:id="colCustomerAddress1" prefWidth="75.0" text="Address 1" />
                  <TableColumn fx:id="colCustomerAddress2" prefWidth="75.0" text="Address 2" />
                  <TableColumn fx:id="colCustomerCity" prefWidth="75.0" text="City" />
                  <TableColumn fx:id="colCustomerCountry" prefWidth="75.0" text="Country" />
                  <TableColumn fx:id="colCustomerPostalCode" prefWidth="75.0" text="ZIP" />
                  <TableColumn fx:id="colCustomerPhone" prefWidth="75.0" text="Phone" />
              </columns>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </children>
      </VBox>
      <VBox fx:id="vboxAddCustomer" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308">
         <children>
            <ButtonBar prefHeight="40.0" prefWidth="200.0" styleClass="nav">
              <buttons>
                <Button fx:id="btnConfirmAddCustomer" mnemonicParsing="false" onAction="#confirmAddCustomer" text="Add" />
                  <Button fx:id="btnCancelAddCustomer" layoutX="535.0" layoutY="18.0" mnemonicParsing="false" onAction="#cancelAddCustomer" text="Cancel" />
              </buttons>
               <padding>
                  <Insets left="15.0" right="15.0" />
               </padding>
            </ButtonBar>
            <Pane styleClass="default-pane" VBox.vgrow="ALWAYS">
               <children>
                  <HBox alignment="CENTER" prefHeight="360.0" prefWidth="600.0">
                     <children>
                        <VBox prefHeight="200.0" prefWidth="200.0">
                           <HBox.margin>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </HBox.margin>
                           <children>
                              <Label fx:id="lblCustomerID" alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" text="Customer ID" textFill="#1d4d4f" VBox.vgrow="ALWAYS" />
                              <Label fx:id="lblCustomerName" alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" text="Customer Name" textFill="#1d4d4f" VBox.vgrow="ALWAYS" />
                              <Label fx:id="lblAddress" alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" text="Address" textFill="#1d4d4f" VBox.vgrow="ALWAYS" />
                              <Label fx:id="lblAddress2" alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" text="Address (Cont.)" textFill="#1d4d4f" VBox.vgrow="ALWAYS" />
                              <Label fx:id="lblCity" alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" text="City" textFill="#1d4d4f" VBox.vgrow="ALWAYS" />
                              <Label fx:id="lblPostalCode" alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" text="Postal Code" textFill="#1d4d4f" VBox.vgrow="ALWAYS" />
                              <Label fx:id="lblPhone" alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" text="Phone Number" textFill="#1d4d4f" VBox.vgrow="ALWAYS" />
                           </children>
                        </VBox>
                        <VBox prefHeight="200.0" prefWidth="100.0" HBox.hgrow="ALWAYS">
                           <HBox.margin>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </HBox.margin>
                           <children>
                              <GridPane VBox.vgrow="ALWAYS">
                                <columnConstraints>
                                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                  <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity" minWidth="10.0" prefWidth="20.0" />
                                </columnConstraints>
                                <rowConstraints>
                                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                </rowConstraints>
                                 <children>
                                    <TextField fx:id="txtAddCustomerID" />
                                    <TextField fx:id="txtAddCustomerName" GridPane.rowIndex="1" />
                                    <TextField fx:id="txtAddCustomerAddress" GridPane.rowIndex="2" />
                                    <TextField fx:id="txtAddCustomerAddress2" GridPane.rowIndex="3" />
                                    <TextField fx:id="txtAddCustomerCity" GridPane.rowIndex="4" />
                                    <TextField fx:id="txtAddCustomerPostalCode" GridPane.rowIndex="5" />
                                    <TextField fx:id="txtAddCustomerPhone" GridPane.rowIndex="6" />
                                 </children>
                              </GridPane>
                           </children>
                        </VBox>
                     </children>
                  </HBox>
               </children>
            </Pane>
         </children>
      </VBox>
   </children>
</Pane>
